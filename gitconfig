[user]
	name = Blurredbits
	email = mmorris00@mac.com
[core]
	editor = subl -n -w
	excludesfiles = /Users/mmorris/.gitignore
	excludesfile = /Users/mmorris/.gitignore_global
[color]
	branch = auto
	diff = auto
	status = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[heroku]
	account = personal
[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
[push]
	default = simple
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[merge]
	tool = p4mergetool
[diff]
	tool = p4mergetool
[difftool "opendiff"]
	cmd = /usr/local/bin/opendiff \"$LOCAL\" \"$REMOTE\"
[mergetool "opendiff"]
	trustExitCode = true
	cmd = /usr/local/bin/opendiff --merge --result=\"$MERGED\" \"$LOCAL\" \"$BASE\" \"$REMOTE\"

[mergetool "p4mergetool"]
	cmd = /Applications/p4merge.app/Contents/Resources/launchp4merge $PWD/$BASE $PWD/$REMOTE $PWD/$LOCAL $PWD/$MERGED
	trustExitCode = false
[mergetool]
	keepBackup = false
[difftool "p4mergetool"]
	cmd = /Applications/p4merge.app/Contents/Resources/launchp4merge $LOCAL $REMOTE
